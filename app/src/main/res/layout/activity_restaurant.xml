<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nucleuslife.restaurantreview.MainActivity"/>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <com.nucleuslife.restaurantreview.views.CitationButton
            android:id="@+id/search_for_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_restaurant"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:layout_marginEnd="20dp"
            />

        <com.nucleuslife.restaurantreview.views.CitationButton
            android:id="@+id/around_me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/around_me_button"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"
            android:layout_marginEnd="20dp"
            />

        <com.nucleuslife.restaurantreview.views.CitationButton
            android:id="@+id/show_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_business_list"
            android:textColor="@android:color/white"
            android:background="@drawable/custom_button"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
